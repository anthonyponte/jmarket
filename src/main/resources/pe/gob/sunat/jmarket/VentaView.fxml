<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>


<HBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.gob.sunat.jmarket.controller.VentaController">
   <children>
      <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" />
          <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="NEVER" />
          <RowConstraints vgrow="NEVER" />
          <RowConstraints vgrow="NEVER" />
        </rowConstraints>
         <children>
            <Label text="Numero Documento:" GridPane.halignment="RIGHT" />
            <Label text="Nombre:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <Button fx:id="btnGuardar" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Guardar" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
            <TextField fx:id="txtNumeroDocumento" prefHeight="30.0" prefWidth="150.0" GridPane.columnIndex="1" />
            <TextField fx:id="txtNombre" editable="false" prefHeight="30.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
            <Button fx:id="btnBuscar" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Buscar" GridPane.columnIndex="2" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </GridPane>
      <GridPane hgap="10.0" vgap="10.0">
          <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
              <ColumnConstraints hgrow="SOMETIMES" />
          </columnConstraints>
          <rowConstraints>
            <RowConstraints />
              <RowConstraints />
              <RowConstraints />
            <RowConstraints vgrow="SOMETIMES" />
          </rowConstraints>
          <children>
              <TableView fx:id="table" GridPane.columnSpan="2" GridPane.rowIndex="2">
                  <columns>
                      <TableColumn fx:id="tcCodigo" prefWidth="100.0" text="Codigo" />
                      <TableColumn fx:id="tcDescripcion" prefWidth="100.0" text="Descripcion" />
                      <TableColumn fx:id="tcUnidadMedida" prefWidth="100.0" text="Unidad Medida" />
                      <TableColumn fx:id="tcCantidad" prefWidth="100.0" text="Cantidad" />
                      <TableColumn fx:id="tcPrecioUnitario" prefWidth="100.0" text="Precio Unitario" />
                  <TableColumn fx:id="tcSubtotal" prefWidth="75.0" text="Subtotal" />
                  </columns>
                  <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
              </TableView>
            <Label text="Total:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                <Button fx:id="btnAgregar" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Agregar" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <TextField fx:id="txtTotal" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="150.0" promptText="Total" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
          </children>
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      </GridPane>
   </children>
</HBox>
