<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<HBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.gob.sunat.jmarket.controller.ProductoController">
    <children>
        <GridPane hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Id:" GridPane.halignment="RIGHT" GridPane.valignment="CENTER" />
                <Label text="Codigo:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                <Label text="Descripcion:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                <Label text="Unidad Medida:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                <Label text="Precio Unitario:" GridPane.halignment="RIGHT" GridPane.rowIndex="4" GridPane.valignment="CENTER" />
                <HBox alignment="BOTTOM_CENTER" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="5">
                    <children>
                        <Button fx:id="btnGuardar" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onActionBtnGuardar" prefHeight="30.0" prefWidth="100.0" text="Guardar" />
                        <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onActionBtnLimpiar" prefHeight="30.0" prefWidth="100.0" text="Limpiar" />
                    </children>
                </HBox>
                <TextField fx:id="tfId" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="150.0" promptText="Id" GridPane.columnIndex="1" />
                <TextField fx:id="tfCodigo" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="150.0" promptText="Codigo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="tfDescripcion" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="150.0" promptText="Descripcion" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <ComboBox fx:id="cbUnidadMedida" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="tfPrecioUnitario" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="150.0" promptText="Precio Unitario" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </GridPane>
        <GridPane hgap="10.0" style="-fx-background-color: #F0F0F0;" vgap="10.0" HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField fx:id="tfFiltro" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" promptText="Filtrar" />
                <TableView fx:id="table" onKeyPressed="#onKeyPressedTable" onMouseClicked="#onMouseClickedTable" tableMenuButtonVisible="true" GridPane.rowIndex="1">
                    <columns>
                        <TableColumn fx:id="tcId" prefWidth="75.0" text="Id" />
                        <TableColumn fx:id="tcCodigo" prefWidth="75.0" text="Codigo" />
                        <TableColumn fx:id="tcDescripcion" prefWidth="75.0" text="Descripcion" />
                        <TableColumn fx:id="tcUnidadMedida" prefWidth="75.0" text="Unidad Medida" />
                        <TableColumn fx:id="tcPrecioUnitario" prefWidth="75.0" text="Precio Unitario" />
                  <TableColumn fx:id="tcEstado" prefWidth="75.0" text="Estado" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </GridPane>
    </children>
</HBox>
